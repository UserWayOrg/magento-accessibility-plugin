<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="store_save_after">
        <observer name="userway_after_create_store_view"
                  instance="Userway\Widget\Observer\OnCreateStore"/>
    </event>
    <event name="store_delete">
        <observer name="userway_after_delete_store_view" instance="Userway\Widget\Observer\OnStoreDelete"/>
    </event>
</config>
